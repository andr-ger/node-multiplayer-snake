pipeline {
  agent { label 'built-in' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t andrger/snake:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh """
          echo 1111
          echo $PATH
          whereis trivy
          trivy image andrger/snake:latest
        """
      }
    }
  }
}
