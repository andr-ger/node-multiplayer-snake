pipeline {
  agent { label 'Ubuntu-App-Server' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t andrger/snake:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy --exit-code 1 --severity HIGH,CRITICAL andrger/snake:latest'
      }
    }
  }
}
